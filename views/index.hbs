<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Socket Chat</title>

	<meta name="viewport" content="width=device-width, initial-scale=1">
	<!-- bootstrap css -->
	<link type="text/css" rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
	<!-- custom styles -->
	<link type="text/css" rel="stylesheet" href="main.css">

</head>
<body>
	<nav class="navbar navbar-default">
	  <div class="container-fluid">
	    <div class="navbar-header">
	      <a class="navbar-brand" href="#">
	        Socket Chat
	      </a>
	    </div>
	  </div>
	</nav>
	<div class="container">
		
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2 form">
				<div class="welcome">
					<h2>Welcome to Socket Chat!<br><small>Please enter your username to join the conversation</small></h2>
					<form class="form-inline" id="username">
						<div class="form-group">
							<input type="text" id="username" class="form-control" placeholder="Username" autofocus>
						</div>
						<input type="submit" value="Join Chat" class="btn btn-info submit">
					</form>
				</div>
				<!-- form to send a new message -->
				<form id="send-msg" class="form-inline">
					<div class="form-group">
						<input type="text" id="new-msg" class="form-control" placeholder="Your message" autofocus>
					</div>
					<input type="submit" value="Send" class="btn btn-info submit">
				</form>
			</div>
			<br>
			<br>
			<hr>
		</div>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<ul id="messages-list">
					<script id="messages-template" type="text/x-handlebars-template">
						<div class="thumbnail">
							<li>\{{username}} says <strong>\{{message}}</strong></li>
						</div>
					</script>
				</ul>

			</div>
		</div>
		

	</div> <!-- end of container -->
	
	<!-- jquery -->  
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>

	<!-- Bootstrap JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js" integrity="sha512-K1qjQ+NcF2TYO/eI3M6v8EiNYZfA95pQumfvcVrTHtwQVDG+aHRqLi/ETn2uB+1JqwYqVG3LIvdm9lj6imS/pQ==" crossorigin="anonymous"></script>
	<!-- handlebars -->
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.0.3/handlebars.min.js"></script>

	<!-- socket.io -->
	<script type="text/javascript" src="/socket.io/socket.io.js"></script>

	<!-- custom scripts -->
	<script type="text/javascript" src="main.js"></script>
	
</body>
</html>